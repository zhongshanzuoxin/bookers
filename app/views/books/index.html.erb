  <h1 class="main-header">Books</h1>

<div class="table-list">
<table class="book">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
      <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book),class:"link" %>
        <%= link_to "Edit", edit_book_path(book),class:"link" %>
        <%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure"}, class:"link" %>
    </tr>
  </tbody>
<% end %>
</table>
</div>


<div class="new-book">
