<div class="errors">
    <%= flash[:notice] %>
<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<p>
<%= f.submit "Update Book" %>
</p>
<%= link_to "Show", book_path, class:"link" %>
<%= link_to "Back", books_path, class:"link" %>

<% end %>

</div>